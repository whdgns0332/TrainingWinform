<Page x:Class="BikeShop.Menu"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BikeShop"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Menu">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="50"/>
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition Width="50"/>
        </Grid.ColumnDefinitions>
        <Frame x:Name="MainMenu"/>
        <Button Grid.Column="1" Grid.Row="1" Content="Products" Margin="5"/>
        <Button Grid.Column="2" Grid.Row="1" Content="Live Support" Margin="5" Click="Button_Click_1"/>
        <Button Grid.Column="3" Grid.Row="1" Content="Email Support" Margin="5" Click="Button_Click"/>
        <TextBlock Grid.Row="2" Grid.ColumnSpan="5" Text="BikeShop" Margin="5"
                   FontSize="36" TextAlignment="Center" VerticalAlignment="Center" Height="48" />

    </Grid>
</Page>
